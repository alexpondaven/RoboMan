function T_i = DHTransform(p)
    % p.theta - rotation of joint
    % p.a - previous joint length
    % p.alpha - angle between joint axes
    % p.d - distance between links along z
    T_i = [cos(p.p.theta)               -sin(theta)             0               a;
            sin(theta)*cos(alpha)   cos(theta)*cos(alpha)   -sin(alpha)     -sin(alpha)*d;
            sin(theta)*sin(alpha)   cos(theta)*sin(alpha)   cos(alpha)      cos(alpha)*d;
            0                       0                       0               1];
end